{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2015",
    "moduleResolution": "node10",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rewriteRelativeImportExtensions": true,
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationMap": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strict": true,
    "allowJs": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "dist", "node_modules"]
}
